{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Kanban Dashboard",
      "type": "shell",
      "command": "openkanban",
      "options": {
        "env": {
          "OPENCODE_PORT": "4096"
        }
      },
      "runOptions": {
        "runOn": "folderOpen",
        "instanceLimit": 1 // This prevents VS Code from trying to spawn it again if it's already there
    },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true, // Changed to true so the dashboard is active immediately
        "panel": "dedicated", // Use 'dedicated' so it persists across restarts
        "clear": true,
        "group": "dashboard" // Groups it logically
      },
      "problemMatcher": []
    }
  ]
}